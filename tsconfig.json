{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2020",
    "lib": ["ESNext", "DOM"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./dist",
    "declaration": true,
    "baseUrl": "."
  },
  "files": ["src/index.ts"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**", "tmp/**/*"]
}
